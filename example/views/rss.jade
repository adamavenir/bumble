doctype xml
rss(xmlns:atom="http://www.w3.org/2005/Atom", version="2.0")
  channel
    title= locals.blogTitle
    description= locals.blogSubtitle
    link= locals.siteUrl
    lastBuildDate= new Date(postData[0].date).toUTCString()
    atom:link(rel="alternate", type="text/html", href="#{locals.siteUrl}")
    atom:link(rel="self", type="application/atom+xml", href="#{locals.rssUrl}")
    generator bumble
    for post in postData
      item
        title= post.title
        link= post.permalink
        atom:link(rel="self", href="#{post.permalink}")
        pubDate= post.date.toUTCString()
        guid(isPermaLink="false")= post.fullSlug
        atom:author
         name= post.author
         uri= post.siteUrl
        description <![CDATA[!{post.postBody}]]>
