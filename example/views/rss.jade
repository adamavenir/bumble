doctype xml
feed(xmlns="http://www.w3.org/2005/Atom")
  channel
    title= postData[0].blogTitle
    link(rel="alternate", type="text/html", href="#{postData[0].siteUrl}")
    link(rel="self", type="application/atom+xml", href="#{postData[0].rssUrl}")
    link= postData[0].siteUrl
    lastBuildDate= new Date(postData[0].date).toUTCString()
    subtitle= postData[0].blogSubtitle
    generator bumble
    description A code pattern or snippet per day.
    for post in postData
      item
        title= post.title
        link= post.permalink
        link(rel="self", href="#{post.permalink}")
        pubDate= post.date.toUTCString()
        guid(isPermaLink="false")= post.fullSlug
        author
         name= post.author
         uri= post.siteUrl
        description <![CDATA[!{post.postBody}]]>