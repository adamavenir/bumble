feed(xmlns="http://www.w3.org/2005/Atom", rel="nofollow")
  channel
  title= blogTitle
  link(rel="alternate", type="text/html", href="{#siteUrl}")
  link(rel="self", type="application/atom+xml", href="{#rssUrl}")
  updated= new Date(posts[0].date).toUTCString()
  subtitle= blogSubtitle
  generator(uri="http://github.com/adambrault/bumble") bumble
  for post in posts
    entry
      title= post.title
      link(rel="alternate", type="text/html", href="#{post.permalink}")
      published= post.date
      updated= post.date
      author
        name= post.author
        uri= post.authorUrl
      content(type="")
        <![CDATA[#{post.content}]]>