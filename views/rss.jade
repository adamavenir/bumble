doctype xml
rss(version='2.0', xmlns:atom='http://www.w3.org/2005/Atom')
  channel
  title= postData[0].blogTitle
  link(rel="alternate", type="text/html", href="{#postData[0].siteUrl}")
  link(rel="self", type="application/atom+xml", href="{#postData[0].rssUrl}")
  updated= new Date(postData[0].date).toUTCString()
  subtitle= postData[0].blogSubtitle
  generator(uri="http://github.com/adambrault/bumble") bumble
  for post in postData
    entry
      title= post.title
      link(rel="alternate", type="text/html", href="#{post.permalink}")
      published= post.date.toUTCString()
      updated= post.date.toUTCString()
      author
        name= post.author
        uri= post.siteUrl
      content(type="")
        <![CDATA[#{post.content}]]>